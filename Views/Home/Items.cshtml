@{
    ViewBag.Title = "Items";
}
@model List<ElectroMart.Models.Product>

<div class="container">

        <div class="row">

            <div class="col-md-3">
                <p class="lead">Electro Mart</p>
                <div class="list-group">
                    <a href="~/Product/SearchResult?category=Computers" class="list-group-item">Laptops/Desktop Computers </a>
                    <a href="~/Product/SearchResult?category=Accessories" class="list-group-item">Accessories</a>
                    <a href="~/Product/SearchResult?category=Mobiles" class="list-group-item">Mobiles/Tabs</a>
                </div>
            </div>

            

         <div class="col-md-9" id="row">
             @Html.Partial("Slider");
             <div class="row">
                   @foreach(var s in Model)
                   {
                    <div class="col-sm-4 col-lg-4 col-md-4">
                        <div class="thumbnail">
                            <img src="~/Images/@s.Picture" alt="">
                            <div class="caption">
                                <h4 class="pull-right">@s.Price</h4>
                                <h4><a href="~/Product/shop_item?item_id=@s.Id">@s.Name</a>
                                </h4>
                                <p>@s.Description@* <a target="_blank" href="http://www.bootsnipp.com">Bootsnipp - http://bootsnipp.com</a>.*@</p>
                                <h6><a href="~/Product/Add_to_cart?item_id=@s.Id">Add To Cart</a></h6>
                            </div>
                        </div>
                    </div>
                   }


             </div>

            </div>

        </div>

    </div>